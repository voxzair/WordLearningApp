<Window x:Class="WordLearningApp.UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оплата подписки" Height="450" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Оформление подписки" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Выберите тариф:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="2" x:Name="TariffComboBox" SelectedIndex="0" Margin="0,0,0,15">
            <ComboBoxItem Content="Месячная подписка - 299 руб." Tag="Month"/>
            <ComboBoxItem Content="Годовая подписка - 2990 руб." Tag="Year"/>
        </ComboBox>

        <TextBlock Grid.Row="3" Text="Номер карты *" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" x:Name="CardNumberTextBox" MaxLength="19" 
                 TextChanged="CardNumberTextBox_TextChanged"/>

        <Grid Grid.Row="5" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Срок действия *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="ExpiryDateTextBox" MaxLength="5" TextChanged="ExpiryDateTextBox_TextChanged"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="CVV *" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="CvvTextBox" MaxLength="3" Width="80"/>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="6" Margin="0,20,0,0" Text="Держатель карты" FontWeight="Bold"/>
        <TextBox Grid.Row="7" x:Name="CardHolderTextBox" Margin="0,5,0,15"/>

        <TextBlock Grid.Row="8" x:Name="ErrorTextBlock" Foreground="Red" 
                   TextWrapping="Wrap" Visibility="Collapsed"/>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Оплатить" Width="120" Height="35" Click="BtnPay_Click" 
                    Background="Green" Foreground="White" FontSize="14" Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="100" Height="35" Click="BtnCancel_Click" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>