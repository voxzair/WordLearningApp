<Window x:Class="WordLearningApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изучение иностранных слов" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        
        <Border Grid.Row="1" Background="#f0f0f0" Padding="10" Margin="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="SubscriptionStatus"
               Text="Подписка: Проверка..."
               FontSize="14" VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="BtnSubscribe"
            Content="Оплатить подписку" Height="30" Padding="15,5"
            Click="MenuPayment_Click" Background="DarkRed" Foreground="White"
            Margin="0,0,5,0"/>

                <Button Grid.Column="2" x:Name="BtnUnsubscribe"
            Content="Отменить подписку" Height="30" Padding="15,5"
            Click="BtnUnsubscribe_Click" Background="Gray" Foreground="White"/>
            </Grid>
        </Border>

        
        <Grid Grid.Row="2" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

           
            <Button Grid.Row="0" Content="🎯 Пройти тест по изученным словам" Height="50" FontSize="16" 
                    Click="BtnTestLearnedWords_Click" Background="Green" Foreground="White" Margin="0,0,0,15"/>

            <Button Grid.Row="1" Content="🧩 Изучить по категории" Height="50" FontSize="16" 
                    Click="BtnStudyByCategory_Click" Background="DarkBlue" Foreground="White" Margin="0,0,0,15"/>

            <Button Grid.Row="2" Content="📊 Статистика" Height="50" FontSize="16" 
                    Click="BtnStatistics_Click" Background="Orange" Foreground="White" Margin="0,0,0,15"/>
            

            
            <UniformGrid Grid.Row="3" Columns="2" Margin="0,20,0,0">
                <Button Content="📚 Слова" Height="50" FontSize="16" Margin="0,0,5,0"
                        x:Name="BtnWordsList" Click="BtnWordsList_Click"/>
                <Button Content="📂 Категории" Height="50" FontSize="16" Margin="5,0,0,0"
                        x:Name="BtnCategories" Click="BtnCategories_Click"/>
            </UniformGrid>
        </Grid>

        
        <TextBlock Grid.Row="3" Text="Редактирование доступно только с активной подпиской" 
                   HorizontalAlignment="Center" FontSize="12" FontStyle="Italic" 
                   Margin="0,10" Foreground="Gray"/>
    </Grid>
</Window>