<Window x:Class="WordLearningApp.UI.WordsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список слов" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Button Content="Добавить слово" Click="BtnAddWord_Click"/>
            <Button Content="Редактировать" Click="BtnEditWord_Click"/>
            <Button Content="Удалить" Click="BtnDeleteWord_Click"/>
        </ToolBar>

        <DataGrid Grid.Row="1" x:Name="WordsDataGrid" 
                  AutoGenerateColumns="False" CanUserAddRows="False" 
                  SelectionMode="Single" Margin="0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Слово" Binding="{Binding ForeignWord}" Width="150"/>
                <DataGridTextColumn Header="Перевод" Binding="{Binding Translation}" Width="150"/>
                <DataGridTextColumn Header="Транскрипция" Binding="{Binding Transcription}" Width="120"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="120"/>
                <DataGridTextColumn Header="Сложность" Binding="{Binding Difficulty}" Width="80"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding AddedDate, StringFormat=dd.MM.yyyy}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>