<Window x:Class="WordLearningApp.UI.WordEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование слова" Height="400" Width="500">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Иностранное слово *" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="ForeignWordTextBox" MaxLength="100"/>

        <TextBlock Grid.Row="2" Text="Перевод *" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox Grid.Row="3" x:Name="TranslationTextBox" MaxLength="100"/>

        <TextBlock Grid.Row="4" Text="Транскрипция" Margin="0,10,0,5"/>
        <TextBox Grid.Row="5" x:Name="TranscriptionTextBox" MaxLength="100"/>

        <Grid Grid.Row="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Категория *" FontWeight="Bold" Margin="0,10,0,5"/>
            <ComboBox Grid.Row="1" x:Name="CategoryComboBox" DisplayMemberPath="Name"/>
        </Grid>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Width="100" Click="BtnSave_Click" Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>