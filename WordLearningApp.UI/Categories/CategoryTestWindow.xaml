<Window x:Class="WordLearningApp.UI.CategoryTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест по словам" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <TextBlock Grid.Row="0" x:Name="CategoryTitleText" Text="Тест по категории" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        
        <TextBlock Grid.Row="1" x:Name="WordToTranslateText" Text="Слово" 
                   FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Вопрос " FontSize="16"/>
            <TextBlock x:Name="CurrentQuestionText" Text="1" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text=" из " FontSize="16"/>
            <TextBlock x:Name="TotalQuestionsText" Text="5" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        
        <UniformGrid Grid.Row="3" x:Name="AnswersPanel" Columns="2" Rows="2" Margin="0,0,0,30">
            <Button Content="Вариант 1" Height="50" Margin="10" FontSize="16" 
                    Click="AnswerButton_Click" Background="LightGray"/>
            <Button Content="Вариант 2" Height="50" Margin="10" FontSize="16" 
                    Click="AnswerButton_Click" Background="LightGray"/>
            <Button Content="Вариант 3" Height="50" Margin="10" FontSize="16" 
                    Click="AnswerButton_Click" Background="LightGray"/>
            <Button Content="Вариант 4" Height="50" Margin="10" FontSize="16" 
                    Click="AnswerButton_Click" Background="LightGray"/>
        </UniformGrid>

        
        <TextBlock Grid.Row="4" Text="Выберите правильный перевод" 
                   HorizontalAlignment="Center" FontSize="14" FontStyle="Italic" 
                   Foreground="Gray" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
    </Grid>
</Window>