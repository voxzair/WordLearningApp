<Window x:Class="WordLearningApp.UI.CategorySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор категории" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите категорию для обучения:" FontSize="16" Margin="0,0,0,20" FontWeight="Bold"/>
        <ComboBox x:Name="CategoryComboBox" Height="35" FontSize="14" Margin="0,0,0,20" 
                  DisplayMemberPath="Name"/>
        <Button Content="Начать обучение" Width="150" Height="40" FontSize="16" 
                Click="StartStudyButton_Click" HorizontalAlignment="Center" Background="Green" Foreground="White"/>
    </StackPanel>
</Window>