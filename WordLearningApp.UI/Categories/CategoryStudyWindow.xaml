<Window x:Class="WordLearningApp.UI.CategoryStudyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обучение по категории" Height="600" Width="700" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock Grid.Row="0" x:Name="CategoryTitleText" Text="Категория: ---" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        
        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Осталось: " FontSize="16"/>
            <TextBlock Grid.Column="1" x:Name="WordsRemainingText" Text="0" FontSize="16" FontWeight="Bold" Foreground="Blue"/>
            <TextBlock Grid.Column="2" Text=" шт." FontSize="16"/>
        </Grid>

        
        <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Всего в категории: " FontSize="14"/>
            <TextBlock Grid.Column="1" x:Name="TotalInCategoryText" Text="0" FontSize="14" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text=" слов" FontSize="14"/>
        </Grid>

        
        <Border Grid.Row="3" Background="#f0f0f0" Padding="20" Margin="0,0,0,15" 
                BorderBrush="#ccc" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Иностранное слово:" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="CurrentWordText" Text="---" FontSize="32" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock x:Name="TranscriptionText" Text="" FontSize="18" FontStyle="Italic" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="4" Background="#e8f4f8" Padding="20" Margin="0,0,0,15" 
                BorderBrush="#b0d4e3" BorderThickness="1" CornerRadius="5" Visibility="Collapsed"
                x:Name="TranslationBorder">
            <StackPanel>
                <TextBlock Text="Перевод:" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock x:Name="TranslationText" Text="---" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        
        <StackPanel Grid.Row="5" HorizontalAlignment="Center">
            <Button x:Name="ShowTranslationButton" Content="Показать перевод" 
                    Width="200" Height="40" FontSize="16" Click="ShowTranslationButton_Click" 
                    Margin="0,0,0,15"/>

            <Button x:Name="NextWordButton" Content="Далее" 
                    Width="200" Height="40" FontSize="16" Click="NextWord_Click" 
                    Margin="0,0,0,15" Visibility="Collapsed"/>
        </StackPanel>

        
        <StatusBar Grid.Row="6">
            <StatusBarItem>
                <TextBlock x:Name="SessionStatsText" Text="Просмотрено: 0 слов" FontSize="14"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>